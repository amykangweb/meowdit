<p id="notice"><%= notice %></p>

<h1>Listing Meows</h1>

<% cache "meows", expires_in: 5.minutes do %>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meows.each do |meow| %>
      <tr>
        <td><%= meow.word %></td>
        <td><%= link_to 'Show', meow %></td>
        <td><%= link_to 'Edit', edit_meow_path(meow) %></td>
        <td><%= link_to 'Destroy', meow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<br>

<%= link_to 'New Meow', new_meow_path %>
